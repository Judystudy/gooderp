<?xml version="1.0"?>
<openerp>
    <data>
    	<!-- 根菜单 -->
        <menuitem id="menu_buy_root" name="采购"/>

        <menuitem id="menu_buy_manage" name="采购" parent="menu_buy_root" sequence="1"/>

		<!-- 购货订单视图 -->

    	<record id="buy_order_tree" model="ir.ui.view">
            <field name="name">buy.order.tree</field>
            <field name="model">buy.order</field>
            <field name="arch" type="xml">
                <tree colors="blue:state in ('approved','confirmed'))" string="Buy Order">
                    <field name="date"/>
                    <field name="name"/>
                    <field name="type"/>
                    <field name="partner_id"/>
                    <field name="state"/>
                    <field name="planned_date"/>
                    <field name="create_uid" string="制单人"/>
                    <field name="approve_uid"/>
                </tree>
            </field>
        </record>
        
        <record id="buy_order_form" model="ir.ui.view">
            <field name="name">buy.order.form</field>
            <field name="model">buy.order</field>
            <field name="arch" type="xml">
                <form string="Buy Order">
                <header>
                	<button name="buy_approve" states="draft" string="审核" type="object" class="oe_highlight"/>
                	<button name="buy_refuse" states="approved,confirmed" string="反审核" type="object"/>
                    <button name="buy_generate_order" states="approved,confirmed,part_in" string="生成采购入库单" type="object" class="oe_highlight"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,approved,confirmed" statusbar_colors='{"approved":"blue"}' readonly="1"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <label string="购货订单 "/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="date" required="1"/>
                        </group>
                        <group>
                        	<field name="planned_date" required="1"/>
                            <field name="name" readonly="1"/>
                            <field name="type" widget="radio"/>
                        </group>
                    </group>
                    <field name="line_ids" context="{'warehouse_type': 'supplier', 'warehouse_dest_type': 'stock'}">
                    	<tree string="Buy Order Lines" editable="bottom">
                            <field name="goods_id"/>
                            <field name="spec"/>
                            <field name="uom_id"/>
                            <field name="warehouse_id"/>
                            <field name='warehouse_dest_id' required='1'/>
                            <field name="quantity" sum="合计数量"/>
                            <field name="price"/>
                            <field name="price_taxed"/>
                            <field name="discount_rate"/>
                            <field name="discount" sum="合计折扣额"/>
                            <field name="amount" sum="合计金额"/>
                            <field name="tax_rate"/>
                            <field name="tax_amount" sum="合计税额"/>
                            <field name="subtotal" sum="价税合计的合计"/>
                            <field name="note"/>
                            <field name="origin"/>
                        </tree>
                    </field>
                    <field name="note" placeholder="暂无备注信息"/>
                    <group>
                    	<field name="total" readonly="1"/>
                        <group col="6" colspan="6">
                            <field name="discount_rate"/>
                            <field name="discount_amount"/>
                            <field name="amount"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="create_uid" readonly="1" string="制单人"/>
                            <field name="approve_uid" readonly="1"/>
                        </group>
                    	<group>
                            <field name="create_date" readonly="1" string="录单时间"/>
                            <field name="write_date" readonly="1" string="最后修改时间"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
                </form>
            </field>
        </record>

        <!-- 采购入库单视图 -->

        <record id="buy_receipt_tree" model="ir.ui.view">
            <field name="name">buy.receipt.tree</field>
            <field name="model">buy.receipt</field>
            <field name="arch" type="xml">
                <tree colors="blue:state in ('approved','confirmed'))" string="Buy Receipt">
                    <field name='date'/>
            		<field name='name'/>
            		<field name="order_id"/>
                    <field name="partner_id"/>
                    <field name="amount"/>
            		<field name='payment'/>
            		<field name='state'/>
            		<field name='date_due'/>
                    <field name="create_uid" string="制单人"/>
                    <field name="approve_uid"/>
                </tree>
            </field>
        </record>

        <record id="buy_receipt_form" model="ir.ui.view">
            <field name="name">buy.receipt.form</field>
            <field name="model">buy.receipt</field>
            <field name="arch" type="xml">
                <form string="Buy Receipt">
                <header>
                	<button name="buy_in_approve" states="draft" string="审核" type="object" class="oe_highlight"/>
                	<button name="buy_in_refuse" states="approved,confirmed,part_paid,paid" string="反审核" type="object"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,approved,confirmed" statusbar_colors='{"approved":"blue"}' readonly="1"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <label string="采购入库单 "/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id" required='1' attrs="{'readonly': [('state','!=','draft')]}"/>
                            <field name="date" required="1" attrs="{'readonly': [('state','!=','draft')]}"/>
                        </group>
                        <group>
                        	<field name="date_due" required="1" attrs="{'readonly': [('state','!=','draft')]}"/>
                            <field name="name" readonly="1"/>
                            <field name="order_id" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                    	<page string="入库单行">
		                    <field name="line_in_ids" attrs="{'readonly': [('state','!=','draft')]}"
		                    	context="{'warehouse_type': 'supplier', 'warehouse_dest_type': 'stock'}">
		                    	<tree string="Buy Receipt Lines" editable="bottom">
		                            <field name="goods_id" required='1'/>
		                            <field name="spec"/>
		                            <field name="uom_id"/>
		                            <field name="warehouse_id" required='1'/>
		                            <field name='warehouse_dest_id' required='1'/>
		                            <field name="goods_qty" sum="合计数量"/>
		                            <field name="price"/>
		                            <field name="price_taxed"/>
		                            <field name="discount_rate"/>
		                            <field name="discount" sum="合计折扣额"/>
		                            <field name="amount" sum="合计金额"/>
		                            <field name="tax_rate"/>
		                            <field name="tax_amount" sum="合计税额"/>
		                            <field name="subtotal" sum="价税合计的合计"/>
		                            <field name="note"/>
		                            <field name="share_cost"/>
		                        </tree>
		                    </field>
		                </page>
		                <page string="采购费用行">
		                	<field name="cost_line_ids" attrs="{'readonly': [('state','!=','draft')]}">
		                		<tree string="Cost Lines" editable="bottom">
		                			<field name="partner_id"/>
			                		<field name="category_id"/>
			                		<field name="amount"/>
			                		<field name="note"/>
			                	</tree>
		                	</field>
		                	<button name="buy_share_cost" string="分摊" type="object"/>
		                </page>
		            </notebook>
                    <field name="note" placeholder="暂无备注信息" attrs="{'readonly': [('state','!=','draft')]}"/>
                    <group>
                        <group col="8" colspan="8">
                            <field name="discount_rate" attrs="{'readonly': [('state','!=','draft')]}"/>
                            <field name="discount_amount"/>
                            <field name="amount"/>
                            <field name="payment" attrs="{'readonly': [('state','!=','draft')]}"/>
                        </group>
                    </group>
                    <group>
                        <group col="6" colspan="6">
                            <field name="bank_account_id" attrs="{'readonly': [('state','!=','draft')]}"/>
                            <field name="debt"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="create_uid" readonly="1" string="制单人"/>
                            <field name="approve_uid" readonly="1"/>
                        </group>
                    	<group>
                            <field name="create_date" readonly="1" string="录单时间"/>
                            <field name="write_date" readonly="1" string="最后修改时间"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
                </form>
            </field>
        </record>

        <!-- 购货管理 action -->

        <record id="buy_order_action" model="ir.actions.act_window">
            <field name="name">购货订单</field>
            <field name="res_model">buy.order</field>
            <field name="context">{}</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                点击创建购货订单
              </p>
            </field>
        </record>

        <record id="buy_receipt_action" model="ir.actions.act_window">
            <field name="name">采购入库单</field>
            <field name="res_model">buy.receipt</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                点击创建采购入库单
              </p>
            </field>
        </record>

        <menuitem id="menu_buy_order_action" action="buy_order_action"
            parent="menu_buy_manage" sequence="1"/>
        <menuitem id="menu_buy_receipt_action" action="buy_receipt_action"
            parent="menu_buy_manage" sequence="2"/>
	</data>
</openerp>
	