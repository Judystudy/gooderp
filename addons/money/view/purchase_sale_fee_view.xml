<?xml version="1.0"?>
<openerp>
    <data>
		<!--销售采购费用清单tree-->
		<record id="fee_order_tree" model="ir.ui.view">
            <field name="name">fee.order.tree</field>
            <field name="model">fee.order</field>
            <field name="arch" type="xml">
                <tree string="Purchase Sale Fee Order" editable="bottom">
                    <field name="name" string="单据编号"/>
                    <field name="partner_id"/>
                    <field name="date"/>
                    <field name="amount" sum="合计"/>
                    <field name="unpaid_amount" sum="合计"/>
                    <field name="source_id"/>
					<field name="source_date"/>
                    <field name="other_payment_list"/>
                </tree>
            </field>
        </record>

        <!--销售采购费用清单form-->
        <record id="fee_order_wizard_form" model="ir.ui.view">
            <field name="name">fee.order.wizard.form</field>
            <field name="model">fee.order.wizard</field>
            <field name="arch" type="xml">
                <form string="费用清单支付向导">
		            <footer>
                        <button name="pay_fee" type="object" default_focus="1" string="确认支付" class="oe_highlight"/>
                        <button string="取消" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

		<!--销售采购费用清单search-->
		<record id="view_fee_order_filter" model="ir.ui.view">
            <field name="name">fee.order.list.select</field>
            <field name="model">fee.order</field>
            <field name="arch" type="xml">
                <search string="Search Purchase Sale Fee Order">
                    <field name="name" string="清单编号" filter_domain="[('name','ilike',self)]"/>
                    <separator/>
                    <filter string="未付款" name="unpaid" domain="[('amount','=',0)]"/>
                    <filter string="已付款" name="paid" domain="[('unpaid_amount','=',0)]"/>
                    <filter string="部分付款" name="partial_paid" domain="[('amount','!=',0),('unpaid_amount','!=',0)]"/>
                    <separator/>
                    <group expand="0" string="分组">
                        <filter string="业务伙伴" domain="[]" context="{'group_by':'partner_id'}"/>
                        <filter string="申请日期（年）" icon="terp-stock_effects-object-colorize" domain="[]" context="{'group_by':'date:year'}"/>
						<filter string="申请日期(月)" icon="terp-personal" domain="[]" context="{'group_by':'date:month'}"/>
                    </group>
               </search>
            </field>
        </record>

        <!-- 销售采购费用清单 action -->
        <record id="fee_order_action" model="ir.actions.act_window">
            <field name="name">销售采购费用清单</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">fee.order</field>
            <field name="view_mode">tree</field>
            <field name="search_view_id" ref="view_fee_order_filter"/>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                点击创建销售采购费用清单
              </p>
            </field>
        </record>
        
		<!-- 支付费用的wizard action-->
        <act_window id="pay_fee_action"
            name="支付费用向导"
            src_model="fee.order"
            res_model="fee.order.wizard"
            multi="True"
            view_type="form"
            view_mode="form"
            target="new"/>

		<!-- 销售采购费用清单menu -->
        <menuitem id="menu_fee_order_action" action="fee_order_action" parent="menu_money_manage" sequence="8"/>
	</data>
</openerp>
	