<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id='wh_move_line_lot_form' model='ir.ui.view'>
            <field name='name'>wh.move.line.lot.form</field>
            <field name='model'>wh.move.line</field>
            <field name='arch' type='xml'>
                <form string='批次' >
                    <group string='批次'>
                        <field name='lot_id' nolabel='1' >
                            <tree editable='bottom' >
                                <field name='name' required='1' />
                                <field name='goods_qty' required='1' sum='1' />
                                <field name='note' />
                            </tree>
                        </field>
                    </group>
                </form>
            </field>
        </record>

        <record id='wh_lot_tree' model='ir.ui.view'>
            <field name='name'>wh.lot.tree</field>
            <field name='model'>wh.lot</field>
            <field name='arch' type='xml'>
                <tree string='序列号'>
                    <field name='name' />
                    <field name='goods_id' />
                    <field name='warehouse_id' />
                    <field name='goods_qty' />
                    <field name='note' />
                </tree>
            </field>
        </record>

        <!-- 仓库 -->
        <record id='warehouse_tree' model='ir.ui.view'>
            <field name='name'>warehouse.tree</field>
            <field name='model'>warehouse</field>
            <field name='arch' type='xml'>
                <tree string='仓库' editable='bottom'>
                    <field name='code' required='1' />
                    <field name='name' required='1' />
                    <field name='active' widget='boolean_clickable' />
                </tree>
            </field>
        </record>

        <!-- 移库单的move -->
        <record id='wh_move_line_tree' model='ir.ui.view'>
            <field name='name'>wh.move.line.tree</field>
            <field name='model'>wh.move.line</field>
            <field name='arch' type='xml'>
                <tree string='库存调拨' >
                    <field name='goods_id' />
                    <field name='uom_id' />
                    <field name='goods_qty' sum='1' />
                    <field name='warehouse_id' />
                    <field name='warehouse_dest_id' />
                    <field name='price' />
                    <field name='subtotal' sum='1' />
                    <field name='state' />
                    <field name='note' />
                    <field name='type' />
                </tree>
            </field>
        </record>

        <record id='wh_move_line_out_tree' model='ir.ui.view'>
            <field name='name'>wh.move.line.out.tree</field>
            <field name='model'>wh.move.line</field>
            <field name='arch' type='xml'>
                <tree string='库存调拨' editable='bottom'>
                    <field name='goods_id' required='1' on_change='onchange_goods_by_out(goods_id, warehouse_id, goods_qty)' />
                    <field name='uom_id' required='1' />
                    <field name='goods_qty' on_change='onchange_price_by_out(goods_id, warehouse_id, goods_qty)' sum='1' />
                    <field name='warehouse_id' string='仓库' required='1' on_change='onchange_goods_by_out(goods_id, warehouse_id, goods_qty)' />
                    <field name='warehouse_dest_id' invisible='1' />
                    <field name='price' string='出库单位成本' readonly='1' />
                    <field name='subtotal' string='出库成本' readonly='1' sum='1' />
                    <field name='note' string='备注' />
                </tree>
            </field>
        </record>

        <record id='wh_move_line_in_tree' model='ir.ui.view'>
            <field name='name'>wh.move.line.in.tree</field>
            <field name='model'>wh.move.line</field>
            <field name='arch' type='xml'>
                <tree string='库存调拨' editable='bottom'>
                    <field name='goods_id' required='1' on_change='onchange_goods_by_in(goods_id)' />
                    <field name='uom_id' required='1' />
                    <field name='lot_id' invisible='1' />

                    <!-- <field name='goods_qty_html' readonly='1' /> -->
                    <field name='goods_qty_html' readonly='1' />
                    <field name='goods_qty' on_change='onchange_price_by_in(goods_qty, price)' sum='1' readonly='1' options="{'open_dialog': {'type': 'set_one2many_readonly', 'field': 'lot_id', 'compute_field': 'goods_qty', 'view_id': 'warehouse.wh_move_line_lot_form'}}" />
                    <field name='warehouse_id' invisible='1' />
                    <field name='warehouse_dest_id' string='仓库' required='1' />
                    <field name='price' string='入库单价' on_change='onchange_price_by_in(goods_qty, price)' />
                    <field name='subtotal' string='入库金额' sum='1' on_change='onchange_subtotal_by_in(subtotal, goods_qty)' />
                    <field name='note' string='备注' />
                </tree>
            </field>
        </record>

        <record id='wh_move_line_internal_tree' model='ir.ui.view'>
            <field name='name'>wh.move.line.internal.tree</field>
            <field name='model'>wh.move.line</field>
            <field name='arch' type='xml'>
                <tree string='库存调拨' editable='bottom'>
                    <field name='goods_id' required='1' on_change='onchange_goods_by_internal(goods_id)' />
                    <field name='uom_id' required='1' />
                    <field name='goods_qty' sum='1' />
                    <field name='warehouse_id' required='1' />
                    <field name='warehouse_dest_id' required='1' />
                    <field name='note' string='备注' />
                </tree>
            </field>
        </record>

        <!-- 出库单 -->
        <record id='wh_out_form' model='ir.ui.view'>
            <field name='name'>wh.out.form</field>
            <field name='model'>wh.out</field>
            <field name='arch' type='xml'>
                <form string='出库单'>
                    <header>
                        <button name='approve_order' type='object' string='审核' class='oe_highlight' states='draft' />
                        <button name='cancel_approved_order' type='object' string='反审核' states='done' />
                        <field name='state' widget='statusbar' readonly='1' />
                    </header>
                    <sheet>
                        <h1>
                            <label string='出库单' />
                            <field name="name" class="oe_inline" readonly="1" />
                        </h1>
                        <group>
                            <group>
                                <field name='partner_id' attrs="{'readonly': [('state', '!=', 'draft')]}" />
                                <field name='date' required='1' attrs="{'readonly': [('state', '!=', 'draft')]}" />
                            </group>
                            <group>
                                <field name='type' required='1' attrs="{'readonly': [('state', '!=', 'draft')]}" />
                            </group>
                        </group>

                        <group string='出库明细'>
                            <field nolabel='1' name='line_out_ids' context="{
                                'tree_view_ref': 'warehouse.wh_move_line_out_tree',
                                'warehouse_dest_type': 'others',
                            }" attrs="{'readonly': [('state', '!=', 'draft')]}" />
                        </group>

                        <group col='6'>
                            <group colspan='2'>
                                <field name='create_uid' string='制单人' readonly='1' />
                                <field name='create_date' string='录单时间' readonly='1' />
                            </group>
                            <group colspan='2'>
                                <field name='write_uid' string='最后修改人' readonly='1' />
                                <field name='write_date' string='最后修改时间' readonly='1' />
                            </group>
                            <group colspan='2'>
                                <field name='approve_uid' readonly='1' />
                                <field name='approve_date' readonly='1' />
                            </group>
                        </group>

                        <group>
                            <field name='note' nolabel='1' placeholder='备注。。。' />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id='wh_out_tree' model='ir.ui.view'>
            <field name='name'>wh.out.tree</field>
            <field name='model'>wh.out</field>
            <field name='arch' type='xml'>
                <tree string='出库单' >
                    <field name='name' />
                    <field name='date' />
                    <field name='type' />
                    <field name='amount_total' />
                    <field name='partner_id' string='客户' />
                    <field name='create_uid' string='制单人' />
                    <field name='approve_uid' />
                    <field name='note' />
                </tree>
            </field>
        </record>

        <!-- 入库单 -->
        <record id='wh_in_form' model='ir.ui.view'>
            <field name='name'>wh.in.form</field>
            <field name='model'>wh.in</field>
            <field name='arch' type='xml'>
                <form string='入库单'>
                    <header>
                        <button name='approve_order' type='object' string='审核' class='oe_highlight' states='draft' />
                        <button name='cancel_approved_order' type='object' string='反审核' states='done' />
                        <field name='state' widget='statusbar' readonly='1' />                    </header>
                    <sheet>
                        <h1>
                            <label string='入库单' />
                            <field name="name" class="oe_inline" readonly="1"/>
                        </h1>
                        <group>
                            <group>
                                <field name='partner_id' attrs="{'readonly': [('state', '!=', 'draft')]}" />
                                <field name='date' required='1' attrs="{'readonly': [('state', '!=', 'draft')]}" />
                            </group>
                            <group>
                                <field name='type' required='1' attrs="{'readonly': [('state', '!=', 'draft')]}" />
                            </group>
                        </group>

                        <group string='入库明细'>
                            <field nolabel='1' name='line_in_ids' context="{
                                'tree_view_ref': 'warehouse.wh_move_line_in_tree',
                                'warehouse_type': 'others',
                            }" attrs="{'readonly': [('state', '!=', 'draft')]}" />
                        </group>

                        <group col='6'>
                            <group colspan='2'>
                                <field name='create_uid' string='制单人' readonly='1' />
                                <field name='create_date' string='录单时间' readonly='1' />
                            </group>
                            <group colspan='2'>
                                <field name='write_uid' string='最后修改人' readonly='1' />
                                <field name='write_date' string='最后修改时间' readonly='1' />
                            </group>
                            <group colspan='2'>
                                <field name='approve_uid' readonly='1' />
                                <field name='approve_date' readonly='1' />
                            </group>
                        </group>

                        <group>
                            <field name='note' nolabel='1' placeholder='备注。。。' />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id='wh_in_tree' model='ir.ui.view'>
            <field name='name'>wh.in.tree</field>
            <field name='model'>wh.in</field>
            <field name='arch' type='xml'>
                <tree string='入库单' >
                    <field name='name' />
                    <field name='date' />
                    <field name='type' />
                    <field name='amount_total' />
                    <field name='partner_id' string='供应商' />
                    <field name='create_uid' string='制单人' />
                    <field name='approve_uid' />
                    <field name='note' />
                </tree>
            </field>
        </record>

        <!-- 内部调拨 -->
        <record id='wh_internal_form' model='ir.ui.view'>
            <field name='name'>wh.internal.form</field>
            <field name='model'>wh.internal</field>
            <field name='arch' type='xml'>
                <form string='移库单'>
                    <header>
                        <button name='approve_order' type='object' string='审核' class='oe_highlight' states='draft' />
                        <button name='cancel_approved_order' type='object' string='反审核' states='done' />
                        <field name='state' widget='statusbar' readonly='1' />                    </header>
                    <sheet>
                        <h1>
                            <label string='移库单' />
                            <field name="name" class="oe_inline" readonly="1"/>
                        </h1>
                        <group>
                            <group>
                                <field name='partner_id' attrs="{'readonly': [('state', '!=', 'draft')]}" />
                            </group>
                            <group>
                                <field name='date' required='1' attrs="{'readonly': [('state', '!=', 'draft')]}" />
                            </group>
                        </group>

                        <group string='移库明细'>
                            <field nolabel='1' name='line_out_ids' context="{'tree_view_ref': 'warehouse.wh_move_line_internal_tree'}" attrs="{'readonly': [('state', '!=', 'draft')]}" />
                        </group>

                        <group col='6'>
                            <group colspan='2'>
                                <field name='create_uid' string='制单人' readonly='1' />
                                <field name='create_date' string='录单时间' readonly='1' />
                            </group>
                            <group colspan='2'>
                                <field name='write_uid' string='最后修改人' readonly='1' />
                                <field name='write_date' string='最后修改时间' readonly='1' />
                            </group>
                            <group colspan='2'>
                                <field name='approve_uid' readonly='1' />
                                <field name='approve_date' readonly='1' />
                            </group>
                        </group>

                        <group>
                            <field name='note' nolabel='1' placeholder='备注。。。' />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id='wh_internal_tree' model='ir.ui.view'>
            <field name='name'>wh.internal.tree</field>
            <field name='model'>wh.internal</field>
            <field name='arch' type='xml'>
                <tree string='调拨单' >
                    <field name='name' />
                    <field name='date' />
                    <field name='amount_total' />
                    <field name='create_uid' string='制单人' />
                    <field name='approve_uid' />
                    <field name='note' />
                </tree>
            </field>
        </record>

        <record id='wh_move_matching_tree' model='ir.ui.view'>
            <field name='name'>wh.move.matching.tree</field>
            <field name='model'>wh.move.matching</field>
            <field name='arch' type='xml'>
                <tree string='匹配记录' >
                    <field name='line_in_id' />
                    <field name='line_out_id' />
                    <field name='qty' />
                </tree>
            </field>
        </record>

    </data>
</openerp>
